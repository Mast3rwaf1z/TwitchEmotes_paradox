#!/usr/bin/env bash
set -e
if [[ ! -d "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox/.envrc" "/data/games/games/World of Warcraft/_classic_/Interface/AddOns/TwitchEmotes_paradox/.direnv"/*.rc
